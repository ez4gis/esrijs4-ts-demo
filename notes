mkdir widgets
cd widgets
npm init --yes
touch .gitignore
npm i -g typescript
npm i -g typings
typings install --global github:Esri/jsapi-resources/4.x/typescript/arcgis-js-api.d.ts --save
touch tsconfig.json
npm i --save-dev typescript
npm i --save-dev tslint
npm i --save-dev grunt
npm i --save-dev grunt-ts
npm i --save-dev grunt-tsconfig
npm i --save-dev grunt-tslint
npm i --save-dev grunt-contrib-watch
npm i --save-dev dojo-typings
touch typings.d.ts
touch Gruntfile.js
